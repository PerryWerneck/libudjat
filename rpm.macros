#
# RPM Macros for packaging libudjat applications
#

%define udjat_product_name %(pkg-config --variable=product_name libudjat)
%define udjat_product_version %(pkg-config --variable=product_version libudjat)
%define udjat_module_version %(pkg-config --variable=module_version libudjat)
%define udjat_module_path %(pkg-config --variable=module_path libudjat)

%define udjat_module() %{udjat_product_name}%{udjat_module_version}-%{**}

