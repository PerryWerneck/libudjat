
#---[ Library configuration ]------------------------------------------------------------

PACKAGE_NAME=@PACKAGE_NAME@
PRODUCT_NAME=@PRODUCT_NAME@

MAIN_SOURCES= \
	$(wildcard src/tools/*.cc) \
	$(wildcard src/tools/os/@OSNAME@/*.cc) \
	$(wildcard src/tools/os/@OSNAME@/configuration/*.cc) \
	$(wildcard src/tools/mainloop/*.cc) \
	$(wildcard src/tools/subprocess/*.cc) \
	$(wildcard src/tools/mainloop/os/@OSNAME@/*.cc) \
	$(wildcard src/main/*.cc) \
	$(wildcard src/main/agent/*.cc) \
	$(wildcard src/main/load/*.cc) \
	$(wildcard src/main/state/*.cc) \
	$(wildcard src/main/request/*.cc) \
	$(wildcard src/main/worker/*.cc) \
	$(wildcard src/main/module/*.cc) \
	$(wildcard src/tools/os/@OSNAME@/file/*.cc) \
	$(wildcard src/tools/url/*.cc) \
	$(wildcard src/tools/http/*.cc) \
	$(wildcard src/main/factory/*.cc) \
	$(wildcard src/main/alert/*.cc)

TEST_SOURCES= \
	$(wildcard src/testprogram/*.cc) \
	$(wildcard src/testprogram/@OSNAME@/*.rc)
	
TARGETS=@OSNAME@-lib devel conf @OPTIONAL_MODULES@

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
DLLTOOL=@DLLTOOL@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=/etc

BASEDIR=@BASEDIR@

OBJDIR=.obj/core
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=$(BASEDIR)/.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

DEPENDS= \
	Makefile \
	src/include/*.h \
	src/include/udjat/*.h \
	src/include/udjat/tools/*.h

CFLAGS= \
	@CXXFLAGS@ \
	-fPIC \
	-Isrc/include \
	-DBUILD_DATE=`date +%Y%m%d` \
	@ECONF_CFLAGS@ \
	@PUGIXML_CFLAGS@ \
	@SYSTEMD_CFLAGS@ \
	@VMDETECT_CFLAGS@

LDFLAGS=\
	@LDFLAGS@

LIBS= \
	@LIBS@ \
	@LIBICONV@ \
	@ECONF_LIBS@ \
	@PUGIXML_LIBS@ \
	@SYSTEMD_LIBS@ \
	@VMDETECT_LIBS@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) \
		$< \
		-O coff \
		-o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	$(DEPENDS)

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(@D)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/@SONAME@ \
	$(BINRLS)/$(PACKAGE_NAME).a

Release: \
	$(BINRLS)/@SONAME@

$(BINRLS)/@SONAME@: \
	$(foreach SRC, $(basename $(MAIN_SOURCES)), $(OBJRLS)/$(SRC).o) \
	$(foreach SRC, $(basename $(wildcard src/main/os/@OSNAME@/*.rc)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

static: \
	$(BINRLS)/$(PACKAGE_NAME).a

$(BINRLS)/$(PACKAGE_NAME).a: \
	$(foreach SRC, $(basename $(MAIN_SOURCES)), $(OBJRLS)/$(SRC).o)

	@echo $@ ...
	@$(MKDIR) $(dir $@)
	@$(AR) rcs $@ $^

#---[ Install Targets ]------------------------------------------------------------------

install: \
       $(foreach TARGET, $(TARGETS), install-$(TARGET))

doc: \
	doxygen/doxyfile
	@cd doxygen ; @DOXYGEN@ doxyfile

install-linux-lib: \
	$(BINRLS)/@SONAME@ \
	install-conf

	@$(MKDIR) \
		$(DESTDIR)$(libdir)

	@$(MKDIR) \
		$(DESTDIR)$(libdir)/@PRODUCT_NAME@-modules

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(libdir)/@SONAME@
		
	@$(LN_S) \
		@SONAME@ \
		$(DESTDIR)$(libdir)/$(PACKAGE_NAME)@LIBEXT@

install-windows-lib: \
	$(BINRLS)/@SONAME@ \
	$(BINRLS)/$(PACKAGE_NAME).a

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(bindir)/$(PACKAGE_NAME)@LIBEXT@
		
	@$(MKDIR) \
		$(DESTDIR)$(libdir)/udjat-modules

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME).a \
		$(DESTDIR)$(libdir)/$(PACKAGE_NAME).a

	@$(DLLTOOL) \
		--input-def $(BINRLS)/$(PACKAGE_NAME).def \
		--dllname @SONAME@ \
		--output-lib $(DESTDIR)$(libdir)/$(PACKAGE_NAME).dll.a

install-devel: \
	install-devel-@OSNAME@

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat

	@$(INSTALL_DATA) \
		src/include/udjat/*.h \
		$(DESTDIR)$(includedir)/udjat

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/tools

	@$(INSTALL_DATA) \
		src/include/udjat/tools/*.h \
		$(DESTDIR)$(includedir)/udjat/tools

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/tools/http

	@$(INSTALL_DATA) \
		src/include/udjat/tools/http/*.h \
		$(DESTDIR)$(includedir)/udjat/tools/http

	# Install PKG-CONFIG files
	@$(MKDIR) \
		$(DESTDIR)$(libdir)/pkgconfig

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/dynamic.pc \
		$(DESTDIR)$(libdir)/pkgconfig/@PACKAGE_NAME@.pc

	@$(INSTALL_DATA) \
		sdk/@OSNAME@/static.pc \
		$(DESTDIR)$(libdir)/pkgconfig/@PACKAGE_NAME@-static.pc

install-devel-linux: \
	$(BINRLS)/$(PACKAGE_NAME).a

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(PACKAGE_NAME).a \
		$(DESTDIR)$(libdir)/@PACKAGE_NAME@.static.a
		

install-devel-windows:

	@$(MKDIR) \
		$(DESTDIR)$(includedir)/udjat/win32

	@$(INSTALL_DATA) \
		src/include/udjat/win32/*.h \
		$(DESTDIR)$(includedir)/udjat/win32

install-conf:

	@$(MKDIR) \
		$(DESTDIR)$(sysconfdir)/$(PRODUCT_NAME).conf.d

	@$(INSTALL_DATA) \
		conf.d/00-defaults.conf \
		$(DESTDIR)$(sysconfdir)/$(PRODUCT_NAME).conf.d/00-$(PACKAGE_NAME)-defaults.conf

#---[ Uninstall Targets ]----------------------------------------------------------------

uninstall: \
       $(foreach TARGET, $(TARGETS), uninstall-$(TARGET))

uninstall-linux-lib:

	@rm -f \
		$(DESTDIR)$(libdir)/@SONAME@
		
	@rm -f \
		$(DESTDIR)$(libdir)/lib$(PACKAGE_NAME)@LIBEXT@

uninstall-windows-lib:

	@rm -f \
		$(DESTDIR)$(bindir)/@SONAME@
		
	@rm -f \
		$(DESTDIR)$(libdir)/@SONAME@.a

uninstall-devel:

	@rm -fr \
		$(DESTDIR)$(includedir)/udjat

	@rm -f \
		$(DESTDIR)$(includedir)/udjat.h

	# Uninstall PKG-CONFIG files
	@rm -f \
		$(DESTDIR)$(libdir)/pkgconfig/@PACKAGE_NAME@.pc

uninstall-conf:

	@rm -f \
		$(DESTDIR)$(sysconfdir)/$(PRODUCT_NAME).d/00-$(PACKAGE_NAME)-defaults.conf

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/udjat@EXEEXT@

$(BINDBG)/udjat@EXEEXT@: \
	$(foreach SRC, $(basename $(TEST_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(BINDBG)/@SONAME@

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-o $@ \
		$^ \
		-L$(BINDBG) \
		-Wl,-rpath,$(BINDBG) \
		$(LDFLAGS) \
		$(LIBS)


$(BINDBG)/@SONAME@: \
	$(foreach SRC, $(basename $(MAIN_SOURCES)), $(OBJDBG)/$(SRC).o) \
	$(foreach SRC, $(basename $(wildcard src/main/os/@OSNAME@/*.rc)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(@D)
	@echo $< ...
	@$(LD) \
		-shared \
		-Wl,-soname,$(@F) \
		-o $@ \
		$(LDFLAGS) \
		$^ \
		$(LIBS)


run: \
	$(BINDBG)/udjat@EXEEXT@

ifeq ($(VALGRIND),no)

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(BINDBG)/udjat@EXEEXT@ -f

else
	@touch valgrind.suppression

	@LD_LIBRARY_PATH=$(BINDBG) \
		$(VALGRIND) --leak-check=full --track-origins=yes --gen-suppressions=all --suppressions=valgrind.suppression \
		$(BINDBG)/udjat@EXEEXT@ -f
endif

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease


-include $(foreach SRC, $(basename $(MAIN_SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(MAIN_SOURCES)), $(OBJRLS)/$(SRC).d)


