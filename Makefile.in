install-windows-lib: \
	$(BINRLS)/@SONAME@ \
	$(BINRLS)/$(PACKAGE_NAME).a

	@$(MKDIR) \
		$(DESTDIR)$(bindir)

	@$(INSTALL_PROGRAM) \
		$(BINRLS)/@SONAME@ \
		$(DESTDIR)$(bindir)/$(PACKAGE_NAME)@LIBEXT@
		
