	install-@OSNAME@-debug

doc: \
	doc/html/index.html

doc/html/index.html:
	
	@echo doc/html/index.html ...

	@$(MKDIR) $(dir $@)
	@DOXYGEN@ doc/doxyfile

install-doc: \
	doc/html/index.html

	@$(MKDIR) \
		$(DESTDIR)${docdir}/@PACKAGE_TARNAME@/reference/html

	cp -rv ${srcdir}/doc/html/* "$(DESTDIR)${docdir}/@PACKAGE_TARNAME@/reference/html"

